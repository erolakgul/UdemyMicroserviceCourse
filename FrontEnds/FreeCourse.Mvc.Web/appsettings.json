{
  "ServiceApiSettings": {
    "IdentityBaseUri": "http://localhost:5001", // identityserver url
    "GatewayBaseUri": "http://localhost:5000",  // dağıtıcı uygulama
    "PhotoStockUri": "http://localhost:5012", // photosctock mikroservice url
    "Catalog": {
      "Path": "services/catalog" // GatewayBaseUri/catalog_path ile veri çekilir
    }
  },
  "ClientSettings": {
    "WebClientCredential": {
      "ClientId": "WebMvcClient",
      "ClientSecret": "secretKey"
    },
    "WebResourceOwner": {
      "ClientId": "WebMvcClientForUser",
      "ClientSecret": "secretKey"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
